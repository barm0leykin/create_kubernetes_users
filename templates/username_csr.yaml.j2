apiVersion: certificates.k8s.io/v1
kind: CertificateSigningRequest
metadata:
  name: {{ USER_NAME }}_csr
spec:
  groups:
  - system:authenticated
  # request: $(cat {{ USER_NAME }}.csr | base64 | tr -d '\n')
  request: {{ BASE64_CSR }}
  signerName: kubernetes.io/kubelet-serving
  usages:
  - digital signature
  - key encipherment
  - server auth
